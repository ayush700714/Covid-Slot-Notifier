<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".WalkThroughActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_linear"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/first"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="6.35dp"
            android:background="@drawable/dark_black_circle"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/second"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="6.35dp"
            android:background="@drawable/dark_grey_circle"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/third"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="6.35dp"
            android:background="@drawable/dark_grey_circle"
            android:orientation="vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtskip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:padding="15dp"
            android:text="skip"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/next"
                android:layout_width="55.3dp"
                android:layout_height="55.3dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:src="@drawable/next_green" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
